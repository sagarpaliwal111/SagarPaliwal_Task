<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.HoldingsActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/portfolio_blue"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_profile"
            android:background="@drawable/circle_white_background"
            android:padding="4dp"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Portfolio"
            android:textAppearance="@style/PortfolioHeading3"
            android:gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/profileIcon"
            app:layout_constraintEnd_toStartOf="@id/sortIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/sortIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_sort"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:tint="@color/white"
            app:layout_constraintEnd_toStartOf="@id/searchIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            app:tint="@color/white"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Tab Navigation -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tabNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabPositions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="POSITIONS"
            android:textAppearance="@style/PortfolioTabInactive"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tabHoldingsContainer"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <LinearLayout
            android:id="@+id/tabHoldingsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/tabPositions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tabHoldings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HOLDINGS"
                android:textAppearance="@style/PortfolioTabActive"
                android:gravity="center"
                android:padding="16dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@color/divider_color" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Holdings List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewHoldings"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_holding"
        app:layout_constraintTop_toBottomOf="@id/tabNavigation"
        app:layout_constraintBottom_toTopOf="@id/summarySection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary Section -->
    <LinearLayout
        android:id="@+id/summarySection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface_gray"
        android:elevation="4dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Expanded State -->
        <LinearLayout
            android:id="@+id/summaryExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/expanded_summary_background">

            <!-- Current Value Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_value"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/currentValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_27_893_65"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Total Investment Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total investment*"
                        android:textColor="@color/text_muted"
                        android:layout_marginStart="16dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/totalInvestment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_28_590_71"
                    android:textColor="@color/text_primary"
                    android:layout_marginEnd="16dp"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Today's P&L Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/today_s_profit_amp_loss"
                        android:textColor="@color/text_muted"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/todaysPnL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_235_65"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/loss_red"
                    android:textSize="14sp"
                     />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/summaryCollapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/profit_amp_loss"
                android:textColor="#888888"
                android:textSize="12sp"  />

            <ImageView
                android:id="@+id/expandIcon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="16dp"
                android:src="@drawable/ic_expand_up"
                android:layout_marginEnd="8dp"
                app:tint="@color/secondary_text" />

            <TextView
                android:id="@+id/totalPnLCollapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_697_06_2_44"
                android:layout_marginEnd="16dp"
                android:textColor="#FF0000"
                android:textSize="14sp"
                 />

        </LinearLayout>

    </LinearLayout>

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
