<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <!-- Stock Symbol -->
    <TextView
        android:id="@+id/textSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASHOKLEY"
        android:textAppearance="@style/PortfolioStockSymbol"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- T1 Holding Tag -->
    <TextView
        android:id="@+id/tagT1Holding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T1 Holding"
        android:textColor="@color/secondary_text"
        android:textSize="10sp"
        android:background="@drawable/tag_background"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/textSymbol"
        app:layout_constraintTop_toTopOf="@id/textSymbol"
        app:layout_constraintBottom_toBottomOf="@id/textSymbol"
        android:layout_marginStart="8dp" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/textQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NET QTY: 3"
        android:textColor="@color/secondary_text"
        android:textSize="12sp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/textSymbol"
        app:layout_constraintTop_toBottomOf="@id/textSymbol" />

    <!-- LTP -->
    <TextView
        android:id="@+id/textLtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LTP: ₹119.10"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textSymbol" />

    <!-- P&L -->
    <TextView
        android:id="@+id/textPnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="P&amp;L: ₹12.90"
        android:textColor="@color/profit_green"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textLtp"
        app:layout_constraintTop_toBottomOf="@id/textLtp" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
